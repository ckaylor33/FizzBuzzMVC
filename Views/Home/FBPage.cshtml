@model FizzBuzzMVC.Models.FizzBuzz;

<div class="container mt-5 col-xxl-8 px-4 py-5">
    <div class="row gy-2 row-cols-1 row-cols-md-2">
        <div class="col border-2 border-end">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                FizzBuzz
            </h1>
            <h4 class="lead">
                This application will consider the two numbers entered. For each number between 1 and 100, it will print
                FIZZ for the numbers that are divisible by the first number. BUZZ will be printed for the numbers
                divisible by the second number. FIZZBUZZ for the numbers divisible by both and simply print
                the number if it is not divisible by either.
            </h4>

            <h2 class="mt-5 border-bottom border-2">Instructions</h2>
            <p class="mb-5">
                Enter two numbers. The first number will be used to evaluate Fizz. The second number will be used to evaluate Buzz and FizzBuzz will be determined based on the combination
                of the two numbers.
            </p>
        </div>

        <div class="col">
            <h5>Enter Numbers</h5>

            <form asp-controller="Home" asp-action="FBPage" method="post">
                <div class="form-group">
                    <label asp-for="FizzValue">Fizz Value</label>
                    <input type="number" asp-for="FizzValue" placeholder="Enter Fizz" class="form-control" value="@Model.FizzValue" aria-label="Fizz Value">
                </div>
                <div class="form-group">
                    <label asp-for="BuzzValue">Buzz Value</label>
                    <input type="number" asp-for="BuzzValue" placeholder="Enter Buzz" class="form-control" value="@Model.BuzzValue" aria-label="Buzz Value">
                </div>
                <div class="col-12 mt-3 d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark"> Buzz It!</button>
                </div>
            </form>

            <h2 class="mt-5 border-bottom border-2">Results</h2>
            <div class="table-responsive">
                @if (Model.Result.Count > 0)
                {
                    <table class="table table-striped table-hover table-dark table-sm">
                        <thead>
                            <tr><th colspan="5">FizzBuzz Results</th></tr>
                        </thead>
                        @for (int i = 0; i < Model.Result.Count(); i += 5)

                        {
                            <tr>
                                <td>@Model.Result[i]</td>
                                <td>@Model.Result[i + 1]</td>
                                <td>@Model.Result[i + 2]</td>
                                <td>@Model.Result[i + 3]</td>
                                <td>@Model.Result[i + 4]</td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
